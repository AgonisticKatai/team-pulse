{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@dtos/*": ["./src/dtos/*"],
      "@errors/*": ["./src/errors/*"],
      "@result": ["./src/types/Result"],
      "@testing/*": ["./src/testing/*"],
      "@types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@value-objects/*": ["./src/domain/value-objects/*"]
    },
    "rootDir": "./src"
  },
  "exclude": ["node_modules", "dist"],
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"]
}

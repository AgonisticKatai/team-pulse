{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "paths": {
      "@dtos/*": ["./src/dtos/*"],
      "@errors/*": ["./src/errors/*"],
      "@testing/*": ["./src/testing/*"],
      "@types/*": ["./src/types/*"]
    },
    "rootDir": "./src"
  },
  "exclude": ["node_modules", "dist"],
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"]
}

dev: ## Build in watch mode
	@echo "ğŸ”§ Building MCP Testing server in watch mode..."
	@pnpm exec tsc --build --watch

build: ## Build the server
	@echo "ğŸ“¦ Building MCP Testing server..."
	@pnpm exec tsc --build

start: ## Start the server
	@echo "ğŸš€ Starting MCP Testing server..."
	@node dist/index.js

clean: ## Clean build artifacts
	@echo "ğŸ§¹ Cleaning MCP Testing build artifacts..."
	@rm -rf dist tsconfig.tsbuildinfo

lint: ## Lint code
	@echo "ğŸ” Linting MCP Testing code..."
	@pnpm exec biome check .

lint-fix: ## Lint and fix code
	@echo "ğŸ”§ Linting and fixing MCP Testing code..."
	@pnpm exec biome check --write .

format: ## Format code
	@echo "âœ¨ Formatting MCP Testing code..."
	@pnpm exec biome format --write .

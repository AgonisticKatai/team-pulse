{
  "dependencies": {
    "@fastify/compress": "^8.3.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@team-pulse/shared": "workspace:*",
    "bcryptjs": "^3.0.3",
    "drizzle-orm": "catalog:",
    "fastify": "^5.6.2",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.7",
    "prom-client": "^15.1.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.8.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "catalog:",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.6",
    "pino-pretty": "^13.1.2",
    "supertest": "^7.1.4",
    "testcontainers": "^11.8.0",
    "tsx": "^4.20.6",
    "typescript": "catalog:"
  },
  "name": "@team-pulse/api",
  "private": true,
  "scripts": {
    "build": "tsc && bash scripts/copy-migrations.sh",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:run": "tsx --env-file=.env src/scripts/run-migrations.ts",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx --env-file=.env src/scripts/seed-super-admin.ts",
    "db:studio": "drizzle-kit studio",
    "dev": "tsx watch --env-file=.env src/index.ts",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "start": "node --env-file=.env dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "type": "module",
  "version": "1.0.0"
}

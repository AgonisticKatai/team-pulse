    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/scripts/seedSuperAdmin.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@team-pulse/shared": "workspace:*",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.5",
    "drizzle-orm": "catalog:",
    "fastify": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.7.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "catalog:",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.5",
    "supertest": "^7.1.4",
    "testcontainers": "^11.7.2",
    "tsx": "^4.19.2",
    "typescript": "catalog:"

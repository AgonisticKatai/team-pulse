{
  "author": "",
  "description": "Modern football team statistics platform with real-time match tracking",
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "catalog:",
    "@vercel/node": "^5.5.3",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "node-gyp": "^11.5.0",
    "turbo": "^2.6.0",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "keywords": [
    "football",
    "statistics",
    "react",
    "typescript",
    "hexagonal-architecture"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{json,md,yml,yaml}": [
      "biome format --write --no-errors-on-unmatched"
    ],
    "*.{ts,tsx,js,jsx}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "name": "team-pulse",
  "packageManager": "pnpm@10.19.0",
  "private": true,
  "scripts": {
    "build": "make build",
    "db:push": "make db-push",
    "db:reset": "make db-reset",
    "db:shell": "make db-shell",
    "db:studio": "make db-studio",
    "dev": "make dev",
    "docker:down": "make docker-down",
    "docker:logs": "make docker-logs",
    "docker:ps": "make docker-ps",
    "docker:up": "make docker-up",
    "format": "turbo format",
    "lint": "make lint",
    "lint:fix": "make lint-fix",
    "prepare": "husky",
    "restart": "make restart",
    "setup": "make setup",
    "start": "make start",
    "stop": "make stop",
    "test": "make test",
    "test:coverage": "make test-coverage",
    "test:ui": "turbo test:ui",
    "test:watch": "make test-watch",
    "type-check": "make type-check"
  },
  "type": "module",
  "version": "1.0.0"
}
